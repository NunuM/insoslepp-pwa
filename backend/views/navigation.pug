nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container
        a.navbar-brand(href='/admin/posts/')=appName
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
                li.nav-item
                    a.nav-link(href='/admin/posts/') Home
                each cat in navigation
                    li.nav-item
                        a.nav-link(href='/admin/posts/?cat=' + cat.id)=cat.name
            div(style='flex:1;')
            form.d-flex()
                input.form-control.me-2(type='search' name='q' placeholder='Search' aria-label='Search')
                button.btn.btn-outline-dark(type='submit') Search
